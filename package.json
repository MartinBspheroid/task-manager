{
  "name": "task-manager",
  "version": "1.0.1",
  "description": "A TypeScript task manager for spawning and managing child processes with logging and timeout capabilities",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "format": "bunx oxlint --format='github'",
    "lint": "bunx oxlint",
    "typecheck": "bunx tsc --noEmit",
    "build": "bunx tsc"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "bumpp": "^10.2.0",
    "@types/chokidar": "^2.1.7"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    
    "chokidar": "^4.0.3",
    "glob": "^11.0.3",
    "p-queue": "^8.1.0"
  }
}
